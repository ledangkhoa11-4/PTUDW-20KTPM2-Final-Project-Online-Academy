<div class="card">
  <div class="card-header">
    Add Topic
  </div>
  <form action="" method="post">
    <div class="card-body">
      <div class="form-group">
          <label for="txtCatID"> Category ID</label>
          <input type="text" name="IDCate" id="txtCatName" class="form-control" value="{{this.catId}}" readonly>
        </div>
        <div class="form-group">
          <label for="txtTopicID"> Topic ID</label>
          <input type="text" name="IDTopic" id="txtTopicID" class="form-control">
        </div>
        <div class="form-group">
          <label for="txtTopicName"> Topic Name</label>
          <input type="text" name="Name" id="txtTopicName" class="form-control">
        </div>
    </div>
    <div class="card-footer text-muted">
      <a name="" id="" class="btn btn-outline-primary" href="/admin/categories/topic?id={{this.catId}}" role="button">
      <i class="fa fa-sign-out" aria-hidden="true"></i>
      Back</a>
      <button type="submit" name="" id="" class="btn btn-primary" > 
        <i class="fa fa-floppy-o" aria-hidden="true"></i>
        Save </button>
    </div>
  </form>
</div>

