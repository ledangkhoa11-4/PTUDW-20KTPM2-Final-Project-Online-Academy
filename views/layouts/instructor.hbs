<body>
    {{>header}}
    <div class="layout has-sidebar fixed-sidebar fixed-header" style="margin-top: 65px ;">
        <aside id="sidebar" class="sidebar break-point-lg has-bg-image">

            <div class="sidebar-layout">
                <div class="sidebar-header">
                    <span style="
                text-transform: uppercase;
                font-size: 15px;
                letter-spacing: 3px;
                font-weight: bold;
              ">Management Courses</span>
                </div>
                <div class="sidebar-content">
                    <navbar class="menu open-current-submenu">
                        <ul>
                            <li class="menu-item sub-menu">
                                <a href="#">
                                    <span class="menu-icon">
                                        <i class="bi bi-briefcase"></i>
                                    </span>
                                    <span class="menu-title">About your course</span>
                                    <span class="menu-suffix">&#x1F525;</span>
                                </a>
                                <div class="sub-menu-list">
                                    <ul>
                                        <li class="menu-item ml-2">
                                            <a href="/instructor/create-course">
                                                <span class="menu-title">
                                                    <i class="bi bi-file-earmark-plus mr-2"></i>
                                                    Add new course
                                                </span>
                                            </a>
                                        </li>
                                        <li class="menu-item ml-2">
                                            <a href="#">
                                                <span class="menu-title">
                                                    <i class="bi bi-binoculars mr-2"></i>
                                                    Your courses
                                                </span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li class="menu-item sub-menu">
                                <a href="/instructor/profile">
                                    <span class="menu-icon">
                                        <i class="bi bi-person-badge"></i>
                                    </span>
                                    <span class="menu-title">Personal Profile</span>
                                </a>
                                <div class="sub-menu-list">
                                    
                                </div>
                            </li>
                        </ul>
                    </navbar>
                </div>
                <div class="sidebar-footer"><a style="color: white; font-size: 18px" href="/auth/logout">Logout</a></div>
            </div>
        </aside>
        <div id="overlay" class="overlay"></div>
        <div style="flex: 1;">
            <header class="header">
                <a id="btn-collapse" href="#">
                    <i class="bi bi-list" style="font-size: 22px; color: black;"></i>
                </a>
                <a id="btn-toggle" href="#" class="sidebar-toggler break-point-lg"><i class="bi bi-list" style="font-size: 22px;color: black;"></i></a>
            </header>
            <main class="content">
                {{{body}}}
            </main>
            <div class="overlay"></div>
        </div>
    </div>
</body>
