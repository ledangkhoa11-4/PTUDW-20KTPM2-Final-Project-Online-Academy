<div class="card">
  <div class="card-header">
    Add Categories
  </div>
  <form action="" method="post">
    <div class="card-body">
      <div class="form-group">
          <label for="txtCatID"></label>
          <input type="text" name="IDCate" id="txtCatID" class="form-control" value="{{this.category.IDCate}}" readonly>
        </div>
        <div class="form-group">
          <label for="txtCatName"></label>
          <input type="text" name="Name" id="txtCatName" class="form-control" value="{{this.category.Name}}">
        </div>

    </div>
    <div class="card-footer text-muted">
      <a name="" id="" class="btn btn-outline-primary" href="/admin/categories" role="button">
      <i class="fa fa-sign-out" aria-hidden="true"></i>
      List</a>
      <button type="submit" name="" id="" class="btn btn-primary" formaction="/admin/categories/patch" > 
        <i class="fa fa-floppy-o" aria-hidden="true"></i>
        Save </button>
      <button type="submit" name="" id="" class="btn btn-primary mr-4" formaction="/admin/categories/del"> 
        <i class="fa fa-trash-o" aria-hidden="true"></i>
        Delete </button>
    </div>
  </form>
</div>

