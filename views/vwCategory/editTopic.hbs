<div class="card">
  <div class="card-header">
    Edit Topic
    {{this.topic.IDCate}}
  </div>
  <form action="" method="post">
    <div class="card-body">
      <div class="form-group">
          <label for="txtCatID"> Category ID</label>
          <input type="text" name="IDCate" id="txtCatName" class="form-control" value="{{this.topic.IDCate}}" readonly>
        </div>
        <div class="form-group">
          <label for="txtTopicID"> Topic ID</label>
          <input type="text" name="IDTopic" id="txtTopicID" class="form-control" value="{{this.topic.IDTopic}}" readonly>
        </div>
        <div class="form-group">
          <label for="txtTopicName"> Topic Name</label>
          <input type="text" name="Name" id="txtTopicName" class="form-control" value="{{this.topic.Name}}">
        </div>
    </div>
    <div class="card-footer text-muted">
      <a name="" id="" class="btn btn-outline-primary" href="/admin/categories/topic?id={{this.topic.IDCate}}" role="button">
      <i class="fa fa-sign-out" aria-hidden="true"></i>
      Back</a>
      <button type="submit" name="" id="" class="btn btn-primary" formaction="/admin/categories/topic/patch"> 
        <i class="fa fa-floppy-o" aria-hidden="true"></i>
        Save </button>
        <button type="submit" name="" id="" class="btn btn-primary" formaction="/admin/categories/topic/del"> 
        <i class="fa fa-trash-o" aria-hidden="true"></i>
        Delete </button>
    </div>
  </form>
</div>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

{{#if this.isAlert}}
  <script>
     Swal.fire({
  icon: '{{this.icon}}',
  title: '{{this.title}}',
  text: 'Something went wrong!',
  footer: '<a href="">Why do I have this issue?</a>',
  timer: 2500
})
  </script>
{{/if}}

